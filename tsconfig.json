{
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "removeComments": true,
    "noEmit": true,
    "module": "CommonJS",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es6",
    "sourceMap": true,
    "lib": [
      "ESNext"
    ],
    "typeRoots": [
      "node_modules/@types",
      "node_modules/anux-package/typings"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist"
  ]
}